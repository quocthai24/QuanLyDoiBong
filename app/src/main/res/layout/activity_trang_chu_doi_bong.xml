<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/drawerLayout"
    tools:context=".DoiBong.TrangChuDoiBong">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="Quan Ly Doi Bong"
        android:gravity="center"
        android:textSize="30dp"
        android:textColor="#000000"
        android:background="#FFFFFF"
        />

    <ListView
        android:id="@+id/lvDanhSachDoiBong"
        android:layout_width="match_parent"
        android:layout_height="524dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btnDocDLDoiBong"
            android:text="Doc Du Lieu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btnThemDoiBong"
            android:text="Them Doi Bong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btnThoat"
            android:text="Thoat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>