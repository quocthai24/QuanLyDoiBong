        android:textColor="#000000"
        android:background="#FFFFFF"
        />
    <EditText
        android:id="@+id/edtmaHLV_xem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint=" Nháº­p Ma Huan Luyen Vien" />

    <ListView
        android:id="@+id/lvDanhSachHLV_xem"
        android:layout_width="match_parent"
        android:layout_height="318dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btnDocDLHLV_xem"
            android:text="Doc Du Lieu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btnThemHLV_xem"
            android:text="Them HLV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btnThoat_xem"
